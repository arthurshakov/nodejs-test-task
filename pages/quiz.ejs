<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<!-- Swiper -->
	<link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css">
	<link rel="stylesheet" href="/styles.css">
  <title><%= title %></title>
</head>

<body>

  <%- include('./partials/header') %>

  <section class="h-100">
    <div class="container py-5 h-100">
      <% if (error) {%>
        <div class="alert alert-danger">
          <%= error %>
        </div>
      <% } %>

			<% if (quiz && quiz.length) { %>
				<div class="swiper quiz-swiper">
					<div class="swiper-wrapper">
						<% quiz.forEach((question, index) => { %>
							<div class="swiper-slide quiz-slide">
								<div class="card">
									<div class="card-body">
										<h3 class="card-title">Question <%= index + 1 %></h3>
										<p class="card-text"><%= question.question %></p>

										<div class="list-group mt-4">
											<% question.answers.forEach(answer => { %>
                        <div class="list-group-item answer-choice" 
                             data-correct="<%= answer.isCorrect %>">
                          <%= answer.text %>
                        </div>
                      <% }) %>
										</div>
									</div>
								</div>
							</div>
						<% }) %>
					</div>

					<!-- Navigation and Pagination -->
          <div class="swiper-button-next"></div>
          <div class="swiper-button-prev"></div>
          <div class="swiper-pagination"></div>
				</div>
				<div class="text-center mt-4">
					<button id="save-results" class="btn btn-primary" disabled>Save Result</button>
					<div id="save-status" class="mt-2"></div>
				</div>
			</div>
			<% } %>
    </div>
  </section>
	<script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>
	<script src="/quiz.js"></script>
</body>

</html>